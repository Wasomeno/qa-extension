{
  "name": "qa-command-center",
  "version": "1.0.0",
  "description": "Seamless GitLab integration for browser-based QA and dev workflows",
  "main": "index.js",
  "scripts": {
    "dev": "cd extension && npm run dev",
    "dev:extension": "cd extension && npm run dev",
    "build": "cd extension && npm run build",
    "build:extension": "cd extension && npm run build",
    "test": "cd extension && npm run test",
    "test:extension": "cd extension && npm run test",
    "lint": "cd extension && npm run lint",
    "lint:extension": "cd extension && npm run lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "typecheck": "cd extension && npm run typecheck",
    "typecheck:extension": "cd extension && npm run typecheck",
    "clean": "rm -rf extension/dist extension/node_modules node_modules",
    "postinstall": "echo 'Postinstall: workspaces handled at root; no nested installs'"
  },
  "workspaces": [
    "extension"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/qa-command-center.git"
  },
  "keywords": [
    "browser-extension",
    "qa",
    "testing",
    "gitlab",
    "issue-tracking"
  ],
  "author": "Your Organization",
  "license": "MIT"
}
