# Database Configuration
DATABASE_URL=postgresql://qa_user:qa_password@localhost:5432/qa_command_center
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# GitLab Integration
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret
GITLAB_REDIRECT_URI=http://localhost:3000/auth/gitlab/callback
GITLAB_BASE_URL=https://gitlab.com
GITLAB_OAUTH_SCOPES=api

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_REDIRECT_URI=http://localhost:3000/auth/slack/callback

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4.1-mini

# Server Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=chrome-extension://your-extension-id,http://localhost:3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# Security
BCRYPT_ROUNDS=12
HELMET_CSP_DIRECTIVES=default-src 'self'

# Database Configuration (Additional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qa_command_center
DB_USER=qa_user
DB_PASSWORD=qa_password
DB_SSL=false

# Redis Configuration (Additional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=http://localhost:3000,chrome-extension://your-extension-id

# Email Configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@qa-command-center.com
FROM_NAME=QA Command Center

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30000

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,json,csv

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_GITLAB_INTEGRATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_RECORDING=true
ENABLE_WEBHOOKS=true

# Development Settings
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_DEBUG_LOGGING=true

# Production Settings (Override in production)
TRUST_PROXY=false
USE_HTTPS=false
SECURE_COOKIES=false

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Cleanup Configuration
CLEANUP_INTERVAL=86400000
CLEANUP_OLD_SESSIONS=true
CLEANUP_OLD_NOTIFICATIONS=true
CLEANUP_OLD_AUDIT_LOGS=true

# GitLab Webhook Configuration
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret
GITLAB_WEBHOOK_URL=http://localhost:3000/api/webhooks/gitlab

# Slack Webhook Configuration  
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Error Tracking (Optional - Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Load Testing Configuration
LOAD_TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Supabase Storage (Optional)
# If set, the backend will upload files to Supabase Storage and return public URLs.
# Keep Service Role key on server only. Bucket should be Public or use signed URLs.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_BUCKET=attachments
